<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="CreateTableAccount-20200212-001" author="batizhao">
        <createTable tableName="account" remarks="用户表">
            <column name="id" type="bigint" remarks="用户ID,主键" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_account_id" />
            </column>
            <column name="email" type="varchar(100)" remarks="用户邮箱">
                <constraints nullable="false" unique="true" uniqueConstraintName="uc_account_email"/>
            </column>
            <column name="password" type="varchar(100)" remarks="用户密码">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="varchar(100)" remarks="用户名">
                <constraints nullable="false" unique="true" uniqueConstraintName="uc_account_username"/>
            </column>
            <column name="name" type="varchar(100)" remarks="用户姓名">
                <constraints nullable="false"/>
            </column>
            <column name="roles" type="varchar(100)" remarks="用户角色">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="datetime" remarks="创建时间">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="account"/>
        </rollback>
    </changeSet>

</databaseChangeLog>